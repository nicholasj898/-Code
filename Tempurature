#include <iostream>
#include <string>

using namespace std;

double Celsius;
double Fahrenheit;

int main()
{
  cout << "Please enter a number in Celsius and we will convert it to Fahrenheit" << endl;
  cin >> Celsius;
  Fahrenheit = Celsius * 9/5 + 32;
  cout << Celsius << " Celsius is " << Fahrenheit << " in Fahrenheit" << endl;
}